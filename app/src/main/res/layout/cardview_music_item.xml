<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e1e1e1">

            <ImageView
            android:id="@+id/imgArtist"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/taylor" />

            <TextView
                android:id="@+id/tvMusicname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imgArtist"
                android:text="Belong With Me"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMusicartist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvMusicname"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imgArtist"
                android:text="Taylor Swift"
                android:textSize="22sp" />



        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>